---
import Layout from "@/layouts/Layout.astro";
import SavedFlashcardsList from "@/components/SavedFlashcardsList";

export const prerender = false;
---

<Layout title="My Flashcards - 10x Cards">
  <div class="container mx-auto max-w-4xl px-4 py-4">
    <div class="space-y-8">
      {/* Header */}
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-foreground">My Flashcards</h1>
        <p class="mt-2 text-muted-foreground">
          Browse and manage your saved flashcards. You can delete flashcards you no longer need.
        </p>
      </div>

      <SavedFlashcardsList client:only="react" />
    </div>
  </div>
</Layout>
