{
  // Traktuj pliki .mdc jak Markdown, aby podgląd działał
  "files.associations": {
    "*.mdc": "markdown"
  },

  // Włącz renderowanie Mermaid w podglądzie Markdown
  "markdown-mermaid.enabled": true,

  // Rozszerz rozpoznawane identyfikatory języka (opcjonalnie)
  "markdown-mermaid.languages": [
    "mermaid",
    "mmd",
    "diagram"
  ]
}
